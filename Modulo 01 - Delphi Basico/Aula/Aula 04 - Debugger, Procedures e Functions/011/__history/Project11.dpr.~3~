program Project11;

  {$APPTYPE CONSOLE}

  {$R *.res}

  uses
    System.SysUtils;

  var
    x,y: Integer;

    begin
      try
        x := 5;
        y:= 0;

        Writeln('X começa com o valor ' + IntToStr(x) + ' e Y começa com '
        + IntToStr(y));

        while (x >2) do
          begin
            writeLn('X = ' + IntToStr(x));

            y:= y + x;
            x:= x -1;

          end;

          Readln;
      except
        on E: Exception do
          Writeln(E.ClassName, ': ', E.Message);
    end;
end.
